<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Адресс выбранной точки"
            android:textSize="20sp"
            android:id="@+id/textViewAddressName"
            android:drawableRight="@drawable/image_account"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <Button
            style="@style/mediumButton.Green"
            android:text="Вызвать"
            android:layout_marginRight="18dp"
            android:id="@+id/buttonMakeOrder" />
        <Button
            style="@style/mediumButton.Black"
            android:text="Настройки"
            android:layout_marginLeft="18dp"
            android:id="@+id/buttonSettings" />

    </LinearLayout>
</RelativeLayout>