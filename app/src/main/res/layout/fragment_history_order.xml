<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_container"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="taxi.city.citytaxiclient.HistoryOrderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="История заказов:"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/textViewOrderTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/orderList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOrderTitle"
        android:layout_above="@+id/linearLayoutButtonGroupOrder"
        android:scrollbarStyle="outsideInset"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:dividerHeight="2.0sp">
    </ListView>

</android.support.v4.widget.SwipeRefreshLayout>
